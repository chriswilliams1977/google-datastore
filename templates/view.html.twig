{% extends "base.html.twig" %}

{% block content %}

<h3>Book</h3>

{# [START book_details] #}
<div class="media">
  {# [START book_image] #}
  <div class="media-left">
    <h4>{{ book.name?: 'No name' }}</h4>
  </div>
  {# [END book_image] #}
  <div class="media-body">
    <h4 class="book-title">
      {{book.name}}
    </h4>
    <h5 class="book-author">By {{book.author|default('Unknown', True)}}</h5>
    <p class="book-description">{{book.description}}</p>
  </div>
</div>
{# [END book_details] #}

{% endblock %}
